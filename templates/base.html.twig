<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ page_title }}{% endblock %}</title>

    {% block stylesheets %}
        <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<body>
<div class="top-bar">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <p>User: {{ app.user.name }} {{ app.user.surname }}
            <span class="links-bar">
                <a href="{{ path('app_logout') }}">Log out</a>
            </span>
        </p>
    {% else %}
        <p>
            <span class="links-bar">
                <a href="{{ path('app_login') }}">Login</a>
                <a href="{{ path('app_register') }}">Register</a>
            </span>
        </p>
    {% endif %}
</div>
{% block body %}{% endblock %}
</body>
</html>
